extends ../../../client/layout

block content
  h1= title
  table
    thead
      tr
        for item,key in data[0]
          if key!="deleted" && key!="deletionComments" && key!="deletedAt"
            th #{key}
    for list in data
      if !list.deleted
        tr
          for item,key in list
            if key!="deleted" && key!="deletionComments" && key!="deletedAt"
              if key=="id"
                td
                  a(href=`/${item}`) #{item}
              else
                td #{item}
  ul
    li
      a(href='/deleted') Deleted Products
